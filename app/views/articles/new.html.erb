<h1>Add new article</h1>

<%= form_for :article, url: '/articles' do |f| %>

  <p>
    <%= f.label :title, ("Enter title:") %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text, ("Article content:") %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit("Yarrr!") %>
  </p>
  
<% end %>