<h2><%= @article.title %></h2>

<p>
  <%= @article.text %>
</p>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
   
    <p>
      <%= f.label :author, ("Author:") %><br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :body, ("Comment:") %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit("Yarrr!") %>
    </p>
      
  <% end %>
</p>